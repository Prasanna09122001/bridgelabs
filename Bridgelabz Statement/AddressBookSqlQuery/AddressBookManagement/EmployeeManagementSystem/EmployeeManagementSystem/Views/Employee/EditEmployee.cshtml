@model EmployeeModels.Employee

<form method="post" >
    @Html.AntiForgeryToken()
    <div class="main-addemployee">
        <div class="text-center main-container" style=" width:70%">
            <h1 class="Title">Edit Employee</h1>    
            <div> @Html.ActionLink("Bact to Employee List","GetAllEmployee")</div>
            @Html.HiddenFor(model => model.EmpId)
            <div class="adjust">
                @Html.LabelFor(model => model.Name)
                <div>
                    @Html.EditorFor(model => model.Name)
                </div>
            </div>
            <div class="adjust">
                @Html.LabelFor(model => model.City)
                <div>
                    @Html.EditorFor(model => model.City)
                </div>
            </div>
            <div class="adjust">
                @Html.LabelFor(model => model.Address)
                <div>
                    @Html.EditorFor(model => model.Address)
                </div>
            </div>
            <div style="padding-top:20px">
                <input type="submit" class="btn btn-default button-adjust" value="Save"/>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="color:green">
                    @ViewBag.Message
                </div>
            </div>

        </div>
    </div>
</form>
<style>
    .main-addemployee {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .adjust {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 70%;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .button-adjust {
        border: 1px solid #aaa;
        background: #6cc56c;
        color: white;
        border-radius: 4px;
    }
</style>
